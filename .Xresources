! xft screen configuration
Xft.geometry: 80x30
Xft.antialias: true
Xft.hinting: true
Xft.autohint: true
Xft.hintstyle: hintfull

! URxvt*termName: xterm-256color


URxvt*saveLines: 4096
URxvt*fastScroll: true
URxvt.scrollBar: false

URxvt*xselectToClipboard: true
URxvt*trimSelection: true

! Locale
! URxvt.font: xft:SourceCodePro:size=10:antialias=true:autohint=true
! URxvt.boldFont: xft:SourceCodeProBold:size=10
URxvt.font: xft:Inconsolata:size=10
URxvt.letterSpace: 0
URxvt.cursorBlink: true

! disable perl extensions
URxvt.perl-ext:

!Clipboard
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.iso14755: False

! mouse selection
URxvt*charClass: 33:48,35:48,37:48,43:48,45-57:48,64:48,95:48,126:48
