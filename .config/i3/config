bindsym XF86LaunchA exec scrot -s -e 'mv $f ~/Pictures/Screenshots'
bindsym XF86Explorer exec scrot -e 'mv $f ~/Pictures/Screenshots'

hide_edge_borders both
new_window pixel 0
gaps inner 10


